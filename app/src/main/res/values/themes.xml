<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChuteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#048693</item>
        <item name="colorPrimaryVariant">#048693</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#187D87</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.ChuteApp">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>
</resources>