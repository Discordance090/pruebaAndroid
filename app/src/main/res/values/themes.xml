<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChuteApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#187D87</item>
        <item name="colorPrimaryVariant">#048693</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#187D87</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Tema para splash screen No modificar -->
    <style name="SplashTheme" parent="Theme.ChuteApp">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="Theme.ChuteApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChuteApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChuteApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>